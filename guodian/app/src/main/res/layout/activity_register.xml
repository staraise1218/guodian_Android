<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <RelativeLayout
        android:id="@+id/register_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/register_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="注册"
            android:textColor="#000000"
            android:textSize="20sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/register_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="74dp"
        android:text="欢迎来到国典"
        android:textColor="#000000"
        android:textSize="24sp" />
    <View
        android:layout_width="2dp"
        android:layout_marginLeft="44dp"
        android:layout_height="20dp"
        android:layout_marginTop="83dp"
        android:layout_below="@+id/register_title"
        android:background="#DDA021" />

    <EditText
        android:layout_marginLeft="46dp"
        android:paddingLeft="2dp"
        android:id="@+id/register_phone"
        android:layout_width="284dp"
        android:layout_height="32dp"
        android:layout_below="@+id/register_title"
        android:layout_marginTop="76dp"
        android:background="@null"
        android:hint="手机号"
        android:inputType="number" />

    <View
        android:layout_width="284dp"
        android:layout_height="1dp"
        android:layout_below="@+id/register_phone"
        android:layout_centerHorizontal="true"
        android:background="@color/gray" />
    <View
        android:layout_width="2dp"
        android:layout_marginLeft="44dp"
        android:layout_height="20dp"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/register_phone"
        android:background="#DDA021" />

    <EditText
        android:paddingLeft="2dp"
        android:id="@+id/register_verify"
        android:layout_width="284dp"
        android:layout_height="30dp"
        android:layout_marginLeft="46dp"
        android:layout_below="@+id/register_phone"
        android:layout_marginTop="36dp"
        android:background="@null"
        android:hint="验证码"
        android:singleLine="true" />

    <View
        android:layout_width="284dp"
        android:layout_height="1dp"
        android:layout_below="@+id/register_verify"
        android:layout_centerHorizontal="true"
        android:background="@color/gray" />

    <TextView
        android:id="@+id/register_getVerification"
        android:layout_width="100dp"
        android:layout_height="28dp"
        android:layout_below="@+id/register_phone"
        android:layout_alignParentRight="true"
        android:layout_marginTop="28dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/register_bg"
        android:gravity="center"
        android:padding="5dp"
        android:singleLine="true"
        android:text="获取验证码"
        android:textColor="#d3d3d3"
        android:textSize="12sp" />


    <View
        android:layout_width="2dp"
        android:layout_marginLeft="44dp"
        android:layout_height="20dp"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/register_verify"
        android:background="#DDA021" />

    <EditText
        android:paddingLeft="2dp"
        android:id="@+id/register_password"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@+id/register_verify"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="36dp"
        android:background="@null"
        android:hint="密码"
        android:singleLine="true" />

    <View
        android:layout_width="284dp"
        android:layout_height="1dp"
        android:layout_below="@+id/register_password"
        android:layout_centerHorizontal="true"
        android:background="@color/gray" />

    <CheckBox
        android:button="@null"
        android:background="@drawable/password_check"
        android:id="@+id/register_show_password"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/register_verify"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="46dp" />

    <TextView
        android:id="@+id/register_tip"
        android:layout_width="284dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="密码需为字母（区分大小写）、数字、符号两种以上组成的6-20位字符"
        android:textColor="#d3d3d3"
        android:textSize="13sp" />

    <Button
        android:id="@+id/register_commit"
        android:layout_width="284dp"
        android:layout_height="42dp"
        android:layout_below="@+id/register_tip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="@drawable/enable_check"
        android:enabled="false"
        android:text="注册"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/register_can_not"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_commit"
        android:layout_alignParentRight="true"
        android:layout_marginTop="4dp"
        android:text="收不到验证码"
        android:layout_marginRight="50dp"
        android:textColor="#FFD59A"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/register_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:text="点击注册意味着您接受《用户协议》和《隐私保护》"
        android:textSize="12dp" />
</RelativeLayout>
