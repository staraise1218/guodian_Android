<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/findpassword_back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/back" />

    <TextView
        android:id="@+id/reset_password_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="找回密码"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/findpassword_phone_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/findpassword_back"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="160dp"
        android:text="手机号" />

    <EditText
        android:id="@+id/findpassword_phone"
        android:layout_width="284dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/findpassword_phone_title"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp" />

    <TextView
        android:id="@+id/findpassword_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/findpassword_phone"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="10dp"
        android:text="当前支持手机号找回密码" />

    <Button
        android:id="@+id/findpassword_commit"
        android:layout_width="284dp"
        android:layout_height="42dp"
        android:layout_below="@+id/findpassword_tips"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="确认" />

</RelativeLayout>
