<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <TextView
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_15"
        android:background="#E6E6E6"
        android:visibility="gone" />

    <TextView
        android:id="@+id/item_browser_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/item_browser_time"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_25"
        android:background="#E6E6E6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_below="@+id/item_browser_time"
        android:layout_marginTop="@dimen/dp_1"
        android:orientation="horizontal"
        android:paddingLeft="25dp">


        <CheckBox
            android:id="@+id/item_browser_check"
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_25"
            android:background="@drawable/round_check"
            android:button="@null"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/item_browser_img"
            android:layout_width="128dp"
            android:layout_height="98dp"
            android:layout_marginTop="@dimen/dp_15" />

        <LinearLayout
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_browser_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:minLines="2"
                android:textColor="@color/black"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/item_browser_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/item_browser_cs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="成色：未使用"
                android:textColor="@color/black"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/item_browser_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
