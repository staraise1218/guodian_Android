<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="800dp"
    android:orientation="vertical">

    <View

        android:layout_width="2dp"
        android:layout_height="16dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:background="@color/colorPrimary" />

    <TextView
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:id="@+id/item_header_show_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="猜你喜欢"
        android:textSize="18sp" />

    <GridView
        android:numColumns="2"
        android:id="@+id/item_header_show_content"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/item_header_show_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        >

    </GridView>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/bg_main_color"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_main_color"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/default_item_margin"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/divider_main_color" />
    </RelativeLayout>


</RelativeLayout>