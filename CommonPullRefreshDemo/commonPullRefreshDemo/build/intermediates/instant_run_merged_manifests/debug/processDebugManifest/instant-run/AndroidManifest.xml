<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.syz.pullrefresh"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="28" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="android.support.v4.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:testOnly="true" >
        <activity
            android:name="com.syz.pullrefresh.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.syz.pullrefresh.ListViewActivity"
            android:label="@string/listView_with_loadmore" />
        <activity
            android:name="com.syz.pullrefresh.RecyclerViewActivity"
            android:label="@string/recyclerview_with_loadmore" />
        <activity
            android:name="com.syz.pullrefresh.GridViewAtivity"
            android:label="@string/gridview_with_loadmore" />
        <activity
            android:name="com.syz.pullrefresh.SwipeListViewActivity"
            android:label="@string/swipe_listview_with_loadmore" />

        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="com.syz.pullrefresh.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>